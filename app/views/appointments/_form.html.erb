      <ul>
      <% appointment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, id: :appointment_date %>
  </div>

  <div class="field">
    <%= form.label :time %>
    <%= form.time_select :time, id: :appointment_time %>
  </div>

  <div class="field">
    <%= form.label :customer %>
    <%= form.select :customer_id, options_for_select(@customers.map{|c| [c.name, c.id]})%>
    
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
